{
  "name": "ytapp-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "postCreateCommand": "./scripts/setup.sh && make verify",
  "updateContentCommand": "./scripts/setup.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.env.linux": {
          "PKG_CONFIG_PATH": "${containerEnv:PKG_CONFIG_PATH}"
        }
      }
    }
  }
}
